---
import Layout from '../layouts/Layout.astro';
import CodeRunner from '../components/CodeRunner.astro';

const featureHighlights = [
	{
		title: 'The Gene Data Structure',
		description:
			'A unique tagged S-expression: type + properties + children in one value. Uniform structure makes code and data indistinguishable — ideal for AI generation and metaprogramming.',
	},
	{
		title: 'NaN-boxed Bytecode VM',
		description:
			'Every value fits in 8 bytes via NaN-boxing. A Nim-powered stack VM with computed-goto dispatch delivers ~30× the performance of Python on class dispatch benchmarks.',
	},
	{
		title: 'AI-Native Runtime',
		description:
			'Capability-based sandboxing, tool calling, checkpoint/resume, deterministic mode, and WASM support — primitives that make Gene a first-class execution environment for AI agents.',
	},
];

const ecosystem = [
	{
		title: 'Language Reference',
		description: 'Dive into the syntax, semantics, and runtime behaviour of Gene.',
		href: '/docs',
	},
	{
		title: 'Examples',
		description: 'Runnable code snippets — click ▶ Run to evaluate any example in the browser.',
		href: '/examples',
	},
	{
		title: 'Community',
		description: 'Join discussions, report issues, and contribute to the language runtime.',
		href: '/community',
	},
];

const showcaseCode = `# Variables & string interpolation
(var name "Gene")
(var year 2026)
(println "Welcome to #{name} (#{year})!")

# Closures capture their environment
(fn make_adder [x]
  (fn [y] (x + y)))
(var add10 (make_adder 10))
(println (add10 5))          # => 15

# Built-in collection methods
(var nums [1 2 3 4 5])
(println (nums .map (fn [x] (x * 2))))       # => [2 4 6 8 10]
(println (nums .filter (fn [x] (x > 3))))    # => [4 5]
(println (nums .reduce 0 (fn [acc x] (acc + x))))  # => 15`;
---

<Layout title="Gene Programming Language" description="Gene is an AI-native Lisp with a NaN-boxed bytecode VM, homoiconic design, capability sandboxing, and WASM support.">
	<section class="hero">
		<div class="hero-content">
			<p class="eyebrow">Introducing Gene</p>
			<h1>AI-native Lisp with homoiconic design and systems-level performance.</h1>
			<p class="lead">
				Gene pairs the elegance of Lisp syntax with an AI-native runtime. Code is data, data is code.
				Run it natively, in the browser via WASM, or hand it to an AI agent with full capability sandboxing.
			</p>
			<div class="cta-group">
				<a class="button primary" href="/getting-started">Start building</a>
				<a class="button secondary" href="/examples">Try examples</a>
			</div>
		</div>
		<div class="hero-spotlight">
			<h2>Why Gene?</h2>
			<ul>
				<li><strong>Homoiconic design</strong> — code and data share identical structure</li>
				<li><strong>NaN-boxed VM</strong> — ~30× faster than Python on class dispatch</li>
				<li><strong>Gradual typing</strong> — annotate as much or as little as you want</li>
				<li><strong>AOP built-in</strong> — before/around/after decorators &amp; aspect bundles</li>
				<li><strong>Capability sandboxing</strong> — deny-by-default, parameterized permissions</li>
				<li><strong>Checkpoint/resume</strong> — save and replay full VM state</li>
			</ul>
		</div>
	</section>

	<section class="features">
		<h2>Built for the AI era</h2>
		<div class="feature-grid">
			{featureHighlights.map((feature) => (
				<article class="feature-card">
					<h3>{feature.title}</h3>
					<p>{feature.description}</p>
				</article>
			))}
		</div>
	</section>

	<section class="code-showcase">
		<h2>Gene in action</h2>
		<p>
			Every Gene construct follows the same pattern: <code>(type ^properties children)</code>.
			Click <strong>▶ Run</strong> to evaluate the example live in your browser via WASM.
		</p>
		<CodeRunner code={showcaseCode} />
	</section>

	<section class="ecosystem">
		<h2>Choose your next stop</h2>
		<div class="ecosystem-grid">
			{ecosystem.map((item) => (
				<a class="ecosystem-card" href={item.href}>
					<h3>{item.title}</h3>
					<p>{item.description}</p>
					<span aria-hidden="true">→</span>
				</a>
			))}
		</div>
	</section>

	<section class="community-invite">
		<h2>Open source and community-driven</h2>
		<p>
			Gene is crafted in the open. Share feedback, propose specs, and help shape the language runtime,
			compiler, and tools.
		</p>
		<a class="button primary" href="https://github.com/gcao/genex" rel="noopener">
			View on GitHub
		</a>
	</section>
</Layout>

<style>
	.hero {
		display: grid;
		gap: 2.5rem;
		align-items: start;
	}

	.hero-content {
		display: flex;
		flex-direction: column;
		gap: 1.25rem;
	}

	.eyebrow {
		text-transform: uppercase;
		letter-spacing: 0.18em;
		font-size: 0.75rem;
		font-weight: 600;
		color: var(--color-muted);
		margin: 0;
	}

	h1 {
		font-size: clamp(2.4rem, 4vw, 3.1rem);
		line-height: 1.1;
		margin: 0;
	}

	.lead {
		font-size: 1.15rem;
		max-width: 36rem;
		color: var(--color-muted);
		margin: 0;
	}

	.cta-group {
		display: flex;
		gap: 1rem;
		flex-wrap: wrap;
	}

	.button {
		border-radius: 999px;
		padding: 0.75rem 1.8rem;
		font-weight: 600;
		display: inline-flex;
		align-items: center;
		justify-content: center;
		gap: 0.4rem;
		border: 1px solid transparent;
		transition: transform 0.15s ease, box-shadow 0.15s ease, background 0.2s ease;
	}

	.button.primary {
		background: var(--color-accent);
		color: white;
		box-shadow: 0 12px 28px rgba(37, 99, 235, 0.2);
	}

	.button.primary:hover,
	.button.primary:focus-visible {
		transform: translateY(-2px);
		box-shadow: 0 16px 32px rgba(37, 99, 235, 0.25);
	}

	.button.secondary {
		border-color: var(--color-border);
		color: var(--color-text);
		background: transparent;
	}

	.hero-spotlight {
		background: var(--color-surface);
		border-radius: 1.25rem;
		border: 1px solid var(--color-border);
		padding: 1.75rem;
		box-shadow: 0 20px 36px rgba(15, 23, 42, 0.15);
	}

	.hero-spotlight h2 {
		margin-top: 0;
		margin-bottom: 1rem;
		font-size: 1.3rem;
	}

	.hero-spotlight ul {
		margin: 0;
		padding-left: 1.2rem;
		display: grid;
		gap: 0.65rem;
		color: var(--color-muted);
	}

	.features {
		margin-top: 5rem;
	}

	.features h2,
	.code-showcase h2,
	.ecosystem h2,
	.community-invite h2 {
		font-size: 2rem;
		margin-bottom: 1rem;
	}

	.feature-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
		gap: 1.5rem;
	}

	.feature-card {
		background: var(--color-surface);
		border-radius: 1rem;
		border: 1px solid var(--color-border);
		padding: 1.5rem;
		box-shadow: 0 18px 30px rgba(15, 23, 42, 0.1);
	}

	.feature-card h3 {
		margin-top: 0;
		margin-bottom: 0.75rem;
		font-size: 1.25rem;
	}

	.feature-card p {
		margin: 0;
		color: var(--color-muted);
	}

	.code-showcase {
		margin-top: 5rem;
	}

	.code-showcase p {
		max-width: 42rem;
		color: var(--color-muted);
		margin-bottom: 0;
	}

	.ecosystem {
		margin-top: 5rem;
	}

	.ecosystem-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
		gap: 1.25rem;
	}

	.ecosystem-card {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
		padding: 1.5rem;
		border-radius: 1rem;
		border: 1px solid var(--color-border);
		background: var(--color-surface);
		color: var(--color-text);
		font-weight: 500;
		box-shadow: 0 16px 24px rgba(15, 23, 42, 0.12);
		transition: transform 0.15s ease, box-shadow 0.15s ease, border-color 0.15s ease;
	}

	.ecosystem-card:hover,
	.ecosystem-card:focus-visible {
		transform: translateY(-4px);
		box-shadow: 0 24px 32px rgba(15, 23, 42, 0.18);
		border-color: var(--color-accent);
	}

	.ecosystem-card span {
		margin-left: auto;
		font-size: 1.4rem;
	}

	.community-invite {
		margin-top: 5rem;
		text-align: center;
		display: grid;
		gap: 1rem;
		justify-items: center;
	}

	.community-invite p {
		max-width: 36rem;
		color: var(--color-muted);
		margin: 0;
	}

	@media (min-width: 880px) {
		.hero {
			grid-template-columns: 3fr 2fr;
			align-items: stretch;
		}
	}
</style>
